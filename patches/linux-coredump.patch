+static void fill_ntfile_note(struct memelfnote *note, TaskState *ts)
+{
+    FILE *fp;
+    char *line = NULL;
+    size_t len = 0;
+    ssize_t read;
+    int count = 0;
+    int data_size = sizeof(abi_long)*2; // reserve space for num_map_entry and page_size
